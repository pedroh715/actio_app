<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="122dp"
        android:layout_height="201dp"
        android:layout_marginTop="124dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        customfontdemo:srcCompat="@drawable/ic_red_ellipse" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ativMobile"
        customfontdemo:srcCompat="@drawable/ic_yellow_ellipse" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        customfontdemo:srcCompat="@drawable/ic_blue_ellipse" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:text="actio."
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/ativMobile"
        android:layout_width="367dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Atividade Mobile."
        android:textColor="@color/white"
        android:textSize="43dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"/>

    <io.alterac.blurkit.BlurLayout
        android:id="@+id/blurLayout"
        android:layout_width="304dp"
        android:layout_height="124dp"
        app:blk_blurRadius="8"
        app:blk_fps="0"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blurLayout1" />

    <io.alterac.blurkit.BlurLayout
        android:id="@+id/blurLayout1"
        android:layout_width="304dp"
        android:layout_height="124dp"
        app:blk_blurRadius="8"
        app:blk_fps="0"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ativMobile" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card2"
        android:layout_width="304dp"
        android:layout_height="124dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/blurLayout1"
        app:layout_constraintEnd_toEndOf="@+id/blurLayout1"
        app:layout_constraintStart_toStartOf="@+id/blurLayout1"
        app:layout_constraintTop_toTopOf="@+id/blurLayout1"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        android:layout_width="304dp"
        android:layout_height="124dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/blurLayout"
        app:layout_constraintEnd_toEndOf="@+id/blurLayout"
        app:layout_constraintStart_toStartOf="@+id/blurLayout"
        app:layout_constraintTop_toTopOf="@+id/blurLayout"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp">
    </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>